<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dinnerreserver.controller.RestaurantController">
    <AnchorPane prefHeight="362.0" prefWidth="644.0" VBox.vgrow="ALWAYS">
        <ImageView fitHeight="150.0" fitWidth="216.0" layoutX="34.0" layoutY="49.0" pickOnBounds="true" preserveRatio="true">
            <Image url="https://t3.ftcdn.net/jpg/02/48/42/64/360_F_248426448_NVKLywWqArG2ADUxDq6QprtIzsF82dMF.jpg" />
        </ImageView>
        <HBox layoutX="67" layoutY="205.0">
            <ImageView fx:id="star1" fitHeight="30" fitWidth="30" visible="false">
                <Image url="@Star.png" />
            </ImageView>
            <ImageView fx:id="star2" fitHeight="30" fitWidth="30" visible="false">
                <Image url="@Star.png" />
            </ImageView>
            <ImageView fx:id="star3" fitHeight="30" fitWidth="30" visible="false">
                <Image url="@Star.png" />
            </ImageView>
            <ImageView fx:id="star4" fitHeight="30" fitWidth="30" visible="false">
                <Image url="@Star.png" />
            </ImageView>
            <ImageView fx:id="star5" fitHeight="30" fitWidth="30" visible="false">
                <Image url="@Star.png" />
            </ImageView>
        </HBox>
        <Text fx:id="rating" layoutX="125.0" layoutY="255.0" textAlignment="CENTER">
            <font>
                <Font size="16.0" />
            </font>
        </Text>
        <VBox layoutX="260.0" layoutY="49.0">
            <Text fx:id="name" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="360.0">
                <font>
                    <Font size="36.0" />
                </font>
            </Text>
            <Text fx:id="address" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="360.0">
                <font>
                    <Font size="18.0" />
                </font>
            </Text>
            <Text fx:id="description" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="360.0" />
        </VBox>
         <Button layoutX="340.0" layoutY="230.0" mnemonicParsing="false" text="Book" onAction="#onForward"/>
         <Button layoutX="440.0" layoutY="230.0" mnemonicParsing="false" text="Menu" />
      <Button layoutX="8.0" layoutY="8.0" onAction="#onBack" mnemonicParsing="false" text="Back" />
    </AnchorPane>
</VBox>

